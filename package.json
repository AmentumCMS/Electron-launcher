{
  "name": "electron-launcher",
  "version": "1.0.0",
  "description": "Configurable electron launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "node test-config.js",
    "test:cli": "node test-config.js --url https://www.test.com",
    "test:custom-config": "node test-config.js --config config.example.json",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "yargs": "^18.0.0"
  },
  "packageManager": "yarn@4.6.0",
  "devDependencies": {
    "dmg-license": "^1.0.11",
    "electron": "^39.2.2",
    "electron-builder": "26.0.12"
  },
  "build": {
    "appId": "com.electron.launcher",
    "productName": "Electron Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "config.json",
      "config.example.json",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
